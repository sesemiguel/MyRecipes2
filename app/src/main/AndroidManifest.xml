<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sese.myrecipes2">

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />

                
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity"
            android:parentActivityName=".SplashScreen"
            android:label="All My Recipes"></activity>
        <activity
            android:name=".NewRecipe"
            android:parentActivityName=".MainActivity"
            android:label="New Recipe"></activity>
        <activity android:name=".EditRecipe"
            android:parentActivityName=".MainActivity"
            android:label="Edit Recipe"></activity>
        <activity android:name=".ViewRecipe"
            android:parentActivityName=".MainActivity"
            android:label="Recipe Title"></activity>
    </application>

</manifest>